<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Screen Capture App"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_marginTop="12dp" android:text="Interval (seconds: 1-10)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/intervalInput"
        android:inputType="number"
        android:text="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:layout_marginTop="12dp" android:text="Upload URL (https://...)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/uploadUrlInput"
        android:hint="https://your-server.example/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:layout_marginTop="12dp" android:text="WebSocket URL (wss://... for audio msgs)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/wsUrlInput"
        android:hint="wss://your-server.example/ws-audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:layout_marginTop="16dp" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/startBtn" android:text="Start" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <Button android:id="@+id/stopBtn" android:text="Stop" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/status" android:layout_marginTop="16dp" android:text="Status: idle" android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>
